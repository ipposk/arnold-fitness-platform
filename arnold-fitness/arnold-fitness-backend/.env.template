# Arnold Fitness Platform - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Gemini AI API (Required)
GEMINI_API_KEY=your_gemini_api_key_here

# Qdrant Vector Database (Required)
QDRANT_URL=your_qdrant_cloud_url_here
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION=arnold_fitness_chunks

# Optional: AWS Credentials (if deploying to AWS)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# Optional: DynamoDB Table Names (for AWS deployment)
# DYNAMODB_SESSIONS_TABLE=ArnoldSessions
# DYNAMODB_MESSAGES_TABLE=ArnoldMessages
# DYNAMODB_CLIENTS_TABLE=ArnoldClients